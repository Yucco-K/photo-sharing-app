datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Photo {
  id        String   @id @default(uuid())
  url       String
  title     String
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  nickname  String   @unique
  photos    Photo[]
}
